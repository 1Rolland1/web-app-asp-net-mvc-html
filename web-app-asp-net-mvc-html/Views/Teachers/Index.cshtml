@using web_app_asp_net_mvc_html.Models
@using web_app_asp_net_mvc_html.Extensions
@model List<Teacher>

<h1><b>Преподаватели </b></h1>

@Html.ActionLink("Добавить запись", "Create", "Teachers")

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>
                Преподаватель
            </th>
            <th>
                Пол
            </th>
            <th>
                Должность(и)
            </th>
            <th>
                Фото преподавателя
            </th>
            <th>
                Действия
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var teacher in Model)
        {
        <tr>
            <td>
                @teacher.Name
            </td>
            <td>
                @teacher.Sex.GetDisplayValue()
            </td>
            <td>
                @teacher.Position.GetDisplayValue()
            </td>
            <td>
                <img src="/Teachers/GetImage/@teacher.Id" style="max-width: 100px; max-height: 200px;" />
            </td>
            <td>
                @Html.ActionLink("Удалить", "Delete", "Teachers", new { id = teacher.Id }, new { })
                @Html.ActionLink("Изменить", "Edit", "Teachers", new { id = teacher.Id }, new { })
            </td>
        </tr>
        }
    </tbody>
</table>
